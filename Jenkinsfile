pipeline{
    agent any 
    environment{
        name = "hareesh"
        wife = "srav"
    }
    stages{
        stage('environment stage'){
            environment{
                lover = "vyshu"
            }
            steps{
                echo "I am ${name}"
                echo "I am married to ${wife}"
                echo "I love ${lover}"
            }
        }
    }
}
